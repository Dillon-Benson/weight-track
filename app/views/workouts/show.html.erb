<div class="row">
	<div class="span4">
		<ul>
			<li><strong>Workout</strong>: <%= @workout.name %></li>
			<li><strong>Weight</strong>: <%= @workout.weight %></li>
			<li><strong>Sets</strong>: <%= @workout.sets %></li>
			<li><strong>Reps</strong>: <%= @workout.reps %></li>
			<% if @workout.last_plateau_date != "" %>
				<li><strong>Plateaued on</strong>: <%= @workout.last_plateau_date %></li>
			<% end %>
		</ul>
	</div>
	<div class="span4">
		<a href="<%= url_for(:controller => 'workouts', :action => 'update', :id => @workout.id) %>"><button type="button" class="btn btn-primary">Update</button></a>
	</div>
</div>