<!DOCTYPE html>
<html>
<head>
  <title>WeightTrack</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if session[:current_user_id] %>
		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<a class="brand" href="<%= root_url %>"><strong>Weight Track</strong></a>
				<ul class="nav">
					<li><a href="/">Home</a></li>
					<li><%= link_to 'Workouts', :controller => "workouts", :action => "all" %></li>
					<li><%= link_to 'New workout', :controller => "workouts", :action => "new" %></li>
					<li><%= link_to 'Update Account', :controller => "users", :action => "update" %></li>
					<li><%= link_to 'Logout', :controller => "sessions", :action => "destroy" %></li>
				</ul>
			</div>
		</div>
	<% else %>
	<div class="navbar navbar-inverse">
		<div class="navbar-inner">
			<a class="brand" href="<%= root_url %>"><strong>Weight Track</strong></a>
			<ul class="nav">
				<li><a href="/">Home</a><li>
				<li><%= link_to 'Login', :controller => "sessions", :action => "new" %></li>
				<li><%= link_to 'New User', :controller => "users", :action => "new" %></li>
			</ul>
		</div>
	</div>
	<% end %>
	<%= yield %>
</body>
</html>
